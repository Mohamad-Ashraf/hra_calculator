<h4 class="pb-4">Changing password for <%= @account.email %></h2>

<%= form_for @account, url: password_reset_admin_account_path(@account) do |f| %>
  <div class="form-group row">
    <%= f.label :current_password, class: 'col-sm-2 col-form-label' %>
    <%= f.password_field :current_password, class: 'form-control col-sm-4' =%>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'col-sm-2 col-form-label' %>
    <%= f.password_field :password, class: 'form-control col-sm-4' =%>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, 'Confirmation', class: 'col-sm-2 col-form-label' %>
    <%= f.password_field :password_confirmation, class: 'form-control col-sm-4' %>
  </div>

  <%= f.submit "Change Password", class: 'btn btn-primary' %>
<% end %>
