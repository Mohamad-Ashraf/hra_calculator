<div class="row">
  <div class="col-4" style="height: 200px; overflow-y: scroll;">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <% @translation_entity.current_locale_options.each do |translation_ele|%>
          <a class="nav-link" id="<%= @translation_entity.current_locale.key %>-<%= translation_ele.key.to_s.gsub('.', '-') %>" data-toggle="pill" href="#v-pills-<%= @translation_entity.current_locale.key %>-<%= translation_ele.key.to_s.gsub('.', '-') %>" role="tab" aria-controls="v-pills-<%= @translation_entity.current_locale.key %>-<%= translation_ele.key.to_s.gsub('.', '-') %>" aria-selected="true"><%= translation_ele.key %></a>
        <% end %>
    </div>
  </div>

  <div class="col-8" style="height: 200px; overflow-y: scroll;">
    <div class="tab-content" id="v-pills-tabContent">
        <% @translation_entity.current_locale_options.each do |translation_ele|%>
        <div class="tab-pane fade" id="v-pills-<%= @translation_entity.current_locale.key %>-<%= translation_ele.key.to_s.gsub('.', '-') %>" role="tabpanel" aria-labelledby="v-pills-<%= @translation_entity.current_locale.key %>-<%= translation_ele.key.to_s.gsub('.', '-') %>-tab">
          <p> <%= (translation_ele.value || translation_ele.default)&.html_safe %> </p>
        </div>
        <% end %>
    </div>
  </div>
</div>

<script>
  registerTranslationEvents();
</script>
